Bootstrap: docker
From: conda/miniconda3-centos7

%labels
    gitUrl ssh://git@gitlab.curie.fr:2222/data-analysis/atac-seq.git
    gitCommit be7438449678fae2a43874ac6ec57616eaa801f9 / devel

%environment
    PATH=/usr/local/envs/python-3.7.1/bin:$PATH
    LC_ALL=en_US.utf-8
    LANG=en_US.utf-8

# real path from baseDir: python.yml
%files
    python.yml /opt/python.yml

%post
    yum install -y which   \
    && yum clean all \
    && conda env create -f /opt/python.yml \
    && echo "source activate python-3.7.1" > ~/.bashrc \
    && conda clean -a

